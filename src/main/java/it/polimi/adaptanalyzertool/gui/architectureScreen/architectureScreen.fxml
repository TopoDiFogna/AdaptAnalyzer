<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import java.lang.String?>
<HBox prefHeight="600.0" prefWidth="800.0" stylesheets="@architectureScreen.css"
      xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.adaptanalyzertool.gui.architectureScreen.ArchitectureScreenController">

    <VBox alignment="TOP_CENTER" prefWidth="267.0" spacing="8">
        <Label fx:id="architectureName" text="Architecture:"/>
        <Separator>
            <padding>
                <Insets bottom="3.0" top="3.0"/>
            </padding>
        </Separator>
        <Label text="Add Component"/>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
            </rowConstraints>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
            <Label minWidth="100.0" prefWidth="100.0" text="Name:"/>
            <TextField fx:id="componentTextField" prefWidth="100.0" promptText="Name" GridPane.columnIndex="1"/>
            <Label minWidth="100.0" prefWidth="150.0" text="Cost:" GridPane.rowIndex="1"/>
            <TextField fx:id="costTextField" prefWidth="50.0" promptText="Cost" GridPane.columnIndex="1"
                       GridPane.rowIndex="1"/>
            <Label minWidth="100.0" prefWidth="150.0" text="Availability:" GridPane.rowIndex="2"/>
            <TextField fx:id="availabilityTextField" prefWidth="50.0" promptText="Availability" GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>
            <Label minWidth="100.0" prefWidth="150.0" text="Execution Time:" GridPane.rowIndex="3"/>
            <TextField fx:id="executionsTextField" prefWidth="50.0" promptText="Execution time" GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>
            <Label minWidth="100.0" text="Color:" GridPane.rowIndex="4"/>
            <ColorPicker fx:id="componentColorPicker" minHeight="25.0" prefWidth="100.0" GridPane.columnIndex="1"
                         GridPane.rowIndex="4"/>
        </GridPane>
        <Button minWidth="50.0" mnemonicParsing="false" onMouseClicked="#createNewComponet" prefWidth="100.0"
                text="Add">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
        </Button>
        <Label id="componentErrorLabel" fx:id="componentErrorLabel"/>
        <Separator>
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
        </Separator>
        <Label text="Components"/>
        <ScrollPane fitToWidth="true" prefHeight="500.0">
            <VBox fx:id="componentsVBox"/>
            <VBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0"/>
            </VBox.margin>
        </ScrollPane>
        <HBox.margin>
            <Insets/>
        </HBox.margin>
    </VBox>

    <HBox prefWidth="267.0">
        <Separator orientation="VERTICAL">
            <padding>
                <Insets right="-3.0"/>
            </padding>
        </Separator>
        <VBox alignment="TOP_CENTER" prefWidth="264.0" spacing="8.0">
            <Label text="Component Details"/>
            <Separator>
                <padding>
                    <Insets bottom="3.0" top="3.0"/>
                </padding>
            </Separator>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                </rowConstraints>
                <Label minWidth="100.0" prefWidth="100.0" text="Name:"/>
                <Label minWidth="100.0" prefWidth="150.0" text="Cost:" GridPane.rowIndex="1"/>
                <Label minWidth="100.0" prefWidth="150.0" text="Availability:" GridPane.rowIndex="2"/>
                <Label minWidth="100.0" prefWidth="150.0" text="Execution Time:" GridPane.rowIndex="3"/>
                <Label minWidth="100.0" text="Color:" GridPane.rowIndex="4"/>
                <Label fx:id="componentNameLabel" layoutX="10.0" layoutY="17.0" minWidth="100.0" prefWidth="100.0"
                       GridPane.columnIndex="1"/>
                <Label fx:id="componentCostLabel" layoutX="10.0" layoutY="47.0" minWidth="100.0" prefWidth="150.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="componentAvailabilityLabel" layoutX="10.0" layoutY="77.0" minWidth="100.0"
                       prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="componentExecutionTimeLabel" layoutX="10.0" layoutY="107.0" minWidth="100.0"
                       prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <Rectangle fx:id="componentColorRectangle" arcHeight="5.0" arcWidth="5.0" fill="#ffffff00"
                               height="17.0" stroke="BLACK" strokeType="INSIDE" visible="false" width="17.0">
                        <HBox.margin>
                            <Insets top="6.0"/>
                        </HBox.margin>
                    </Rectangle>
                    <Label fx:id="componentColorLabel" minWidth="100.0">
                        <HBox.margin>
                            <Insets left="3.0" top="6.0"/>
                        </HBox.margin>
                    </Label>
                </HBox>
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
            </GridPane>
            <Separator prefWidth="200.0"/>
            <Label layoutX="84.0" layoutY="10.0" text="Add Service"/>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                    <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="NEVER"/>
                </rowConstraints>
                <VBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </VBox.margin>
                <Label text="Name:"/>
                <TextField fx:id="serviceTextField" promptText="Name" GridPane.columnIndex="1"/>
                <Label text="Type:" GridPane.rowIndex="1"/>
                <ComboBox fx:id="serviceComboBox" onAction="#serviceComboBoxChanged" prefWidth="150.0"
                          visibleRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Provided"/>
                            <String fx:value="Required"/>
                        </FXCollections>
                    </items>
                    <value>
                        <String fx:value="Provided"/>
                    </value>
                </ComboBox>
                <Label fx:id="usedProbabilityLabel" disable="true" text="Used probability:" GridPane.rowIndex="2"/>
                <TextField fx:id="usedProbabilityTextField" disable="true" layoutX="136.0" layoutY="13.0"
                           promptText="Used probability" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="numberOfExecutionLabel" disable="true" text="Number of executions:"
                       GridPane.rowIndex="3"/>
                <TextField fx:id="numberofExecutionTextField" disable="true" layoutX="10.0" layoutY="13.0"
                           promptText="Number of executions" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>
            <Button fx:id="serviceAddButton" disable="true" minWidth="50.0" mnemonicParsing="false"
                    onMousePressed="#createNewService" prefWidth="100.0" text="Add"/>
            <Label fx:id="serviceErrorLabel"/>
            <Separator prefWidth="200.0"/>
            <Label layoutX="84.0" layoutY="210.0" text="Services"/>
            <ScrollPane fitToWidth="true" layoutX="10.0" layoutY="160.0" prefHeight="500.0">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0"/>
                </VBox.margin>
                <VBox fx:id="servicesVBox"/>
            </ScrollPane>
        </VBox>
        <Separator orientation="VERTICAL">
            <padding>
                <Insets right="-3.0"/>
            </padding>
        </Separator>
    </HBox>

    <VBox alignment="TOP_CENTER" prefWidth="267.0" spacing="8.0">
        <Label text="Service Details"/>
        <Separator>
            <VBox.margin>
                <Insets bottom="3.0" top="3.0"/>
            </VBox.margin>
        </Separator>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <VBox.margin>
                <Insets left="5.0" right="5.0"/>
            </VBox.margin>
            <Label text="Name:"/>
            <Label text="Type:" GridPane.rowIndex="1"/>
            <Label fx:id="usedProbabilityDetailLabel" text="Used Probability:" GridPane.rowIndex="2"/>
            <Label fx:id="numberOfExecutionsDetailLabel" text="Number of Executions:" GridPane.rowIndex="3"/>
            <Label fx:id="serviceNameLabel" GridPane.columnIndex="1"/>
            <Label fx:id="serviceTypeLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label fx:id="serviceUsedProbabilityLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Label fx:id="serviceNumberOfExecutionsLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
        <Separator prefWidth="200.0"/>
        <Label text="Metrics"/>
    </VBox>
</HBox>
