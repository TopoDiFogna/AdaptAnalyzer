<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.adaptanalyzertool.gui.MainController">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem accelerator="Ctrl+N" onAction="#createNewArchitecture" text="New"/>
                <MenuItem text="Import" accelerator="Ctrl+I" onAction="#importArchitecture"/>
                <MenuItem text="Export" accelerator="Ctrl+S" onAction="#exportArchitecture"/>
                <MenuItem accelerator="Ctrl+X" onAction="#exit" text="Exit"/>
            </Menu>
            <Menu text="View">
                <MenuItem accelerator="Ctrl+V" text="Show Architecture" onAction="#showArchitectureGraph"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
